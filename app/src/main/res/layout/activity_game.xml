<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9fadb6"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/trump"
        android:layout_width="132dp"
        android:layout_height="39dp"
        android:layout_marginTop="165dp"
        android:layout_marginBottom="48dp"
        android:text="trump"
        app:layout_constraintBottom_toTopOf="@+id/mycard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/StartWithCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="113dp"
        android:text="Wait"
        app:layout_constraintBottom_toTopOf="@+id/playacard"
        app:layout_constraintStart_toStartOf="@+id/trump"
        app:layout_constraintTop_toBottomOf="@+id/trump" />

    <TextView
        android:id="@+id/mycard"
        android:layout_width="111dp"
        android:layout_height="88dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="319dp"
        android:text="card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/playacard"
        app:layout_constraintStart_toStartOf="@+id/StartWithCards"
        app:layout_constraintTop_toBottomOf="@+id/trump" />

    <Button
        android:id="@+id/playacard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="323dp"
        android:text="Play a card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StartWithCards"
        tools:visibility="invisible" />

    <HorizontalScrollView
        android:id="@+id/playerHand1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/cardHand1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


        </LinearLayout>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>